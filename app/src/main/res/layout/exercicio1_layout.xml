<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    android:orientation="vertical"
    tools:context=".Exercicio1_Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFundo"
        android:id="@+id/idToolbar">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="390dp"
        android:layout_marginLeft="10dp"
        android:background="#FFF"
        android:height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/botao"
                android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
                android:paddingTop="12dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="16dp"

                android:paddingTop="5dp"
                android:text="Personal notes"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/botao"
                android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
                android:paddingTop="12dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="16dp"

                android:paddingTop="5dp"
                android:text="Office notes"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/botao"
                android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
                android:paddingTop="12dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="Public notes"
                android:textColor="#FFF"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="390dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:background="#FFF"
        android:height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/colorNote"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note 1"
                    android:textSize="16dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textSize="16dp"
                    android:paddingTop="40dp"
                    android:paddingLeft="10dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="215dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/colorNote1"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note 1"
                    android:textSize="16dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoCard1"
                    android:textSize="16dp"
                    android:paddingTop="40dp"
                    android:paddingLeft="10dp"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/AttachPhoto"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="attach a"
                    android:textSize="16dp"
                    android:paddingTop="40dp"
                    android:paddingLeft="50dp"
                    android:textColor="#FFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="photo"
                    android:textSize="16dp"
                    android:paddingTop="55dp"
                    android:paddingLeft="55dp"
                    android:textColor="#FFF"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/AttachPhoto1"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="attach a"
                    android:textSize="16dp"
                    android:paddingTop="30dp"
                    android:paddingLeft="50dp"
                    android:textColor="#FFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="photo"
                    android:textSize="16dp"
                    android:paddingTop="50dp"
                    android:paddingLeft="60dp"
                    android:textColor="#FFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note 2"
                    android:textSize="16dp"
                    android:paddingTop="130dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loren ipsum dolor sit amet."
                    android:paddingTop="150dp"
                    android:textSize="16dp"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:height="1dp"
                    android:layout_marginTop="120dp"
                    android:width="150dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>